[
	// ========================================
	// Window/Split Navigation (Vim-style)
	// ========================================
	{
		"key": "ctrl+h",
		"command": "workbench.action.navigateLeft",
		"when": "(editorTextFocus && vim.active && vim.mode != 'Insert') || sideBarFocus || terminalFocus"
	},
	{
		"key": "ctrl+l",
		"command": "workbench.action.navigateRight",
		"when": "(editorTextFocus && vim.active && vim.mode != 'Insert') || sideBarFocus || terminalFocus"
	},
	{
		"key": "ctrl+k",
		"command": "workbench.action.navigateUp",
		"when": "(editorTextFocus && vim.active && vim.mode != 'Insert') || sideBarFocus || terminalFocus"
	},
	{
		"key": "ctrl+j",
		"command": "workbench.action.navigateDown",
		"when": "(editorTextFocus && vim.active && vim.mode != 'Insert') || sideBarFocus || terminalFocus"
	},

	// ========================================
	// Tab Navigation
	// ========================================
	{
		"key": "shift+h",
		"command": "workbench.action.previousEditor",
		"when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
	},
	{
		"key": "shift+l",
		"command": "workbench.action.nextEditor",
		"when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
	},

	// ========================================
	// File Explorer (Sidebar) Navigation
	// ========================================
	{
		"key": "j",
		"command": "list.focusDown",
		"when": "listFocus && !inputFocus"
	},
	{
		"key": "k",
		"command": "list.focusUp",
		"when": "listFocus && !inputFocus"
	},
	{
		"key": "h",
		"command": "list.collapse",
		"when": "listFocus && !inputFocus"
	},
	{
		"key": "l",
		"command": "list.expand",
		"when": "listFocus && !inputFocus"
	},
	{
		"key": "o",
		"command": "list.select",
		"when": "listFocus && !inputFocus"
	},

	// ========================================
	// Quick Open / Command Palette Vim navigation
	// ========================================
	{
		"key": "ctrl+j",
		"command": "workbench.action.quickOpenSelectNext",
		"when": "inQuickOpen"
	},
	{
		"key": "ctrl+k",
		"command": "workbench.action.quickOpenSelectPrevious",
		"when": "inQuickOpen"
	},

	// ========================================
	// Autocomplete/Suggestions Vim navigation
	// ========================================
	{
		"key": "ctrl+j",
		"command": "selectNextSuggestion",
		"when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
	},
	{
		"key": "ctrl+k",
		"command": "selectPrevSuggestion",
		"when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
	},

	// ========================================
	// Resize Splits
	// ========================================
	{
		"key": "ctrl+alt+h",
		"command": "workbench.action.decreaseViewWidth",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+alt+l",
		"command": "workbench.action.increaseViewWidth",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+alt+k",
		"command": "workbench.action.decreaseViewHeight",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+alt+j",
		"command": "workbench.action.increaseViewHeight",
		"when": "editorTextFocus"
	},

	// ========================================
	// Sidebar and Panel Toggles
	// ========================================
	{
		"key": "ctrl+b",
		"command": "workbench.action.toggleSidebarVisibility",
		"when": "vim.active && vim.mode != 'Insert'"
	},

	// ========================================
	// Escape behavior in various contexts
	// ========================================
	{
		"key": "escape",
		"command": "workbench.action.closeQuickOpen",
		"when": "inQuickOpen"
	},
	{
		"key": "escape",
		"command": "closeFindWidget",
		"when": "editorFocus && findWidgetVisible"
	},

	// ========================================
	// Better default for Ctrl+D (avoid VSCode's default)
	// ========================================
	{
		"key": "ctrl+d",
		"command": "",
		"when": "editorTextFocus && vim.active"
	}
]
